<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_normal_64"
    android:layout_height="@dimen/margin_normal_64"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_normal_8"
    android:layout_marginEnd="@dimen/margin_normal_8"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_icon_effect_item"
        android:layout_width="@dimen/margin_normal_48"
        android:layout_height="@dimen/margin_normal_48"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_style_original" />

    <TextView
        android:id="@+id/tv_name_effect_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon_effect_item"
        android:layout_marginTop="@dimen/margin_normal_3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="雪白"
        android:textSize="@dimen/text_size_10" />

</RelativeLayout>